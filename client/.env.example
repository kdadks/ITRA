# Environment Variables for ITR Assist Platform
# Copy this file to .env and update with your actual values

# ===========================================
# REACT APP CONFIGURATION
# ===========================================

# Supabase Configuration
REACT_APP_SUPABASE_URL=your_supabase_project_url_here
REACT_APP_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# API Configuration
REACT_APP_API_URL=http://localhost:5000
REACT_APP_API_TIMEOUT=10000

# Application Configuration
REACT_APP_ENVIRONMENT=development
REACT_APP_VERSION=1.0.0
REACT_APP_APP_NAME="ITR Assist"

# ===========================================
# THIRD-PARTY SERVICES
# ===========================================

# OCR Service (Optional)
REACT_APP_OCR_API_KEY=your_ocr_api_key_here
REACT_APP_OCR_ENDPOINT=https://api.ocr.space/parse/image

# Email Service (Optional)
REACT_APP_EMAILJS_SERVICE_ID=your_emailjs_service_id
REACT_APP_EMAILJS_TEMPLATE_ID=your_emailjs_template_id
REACT_APP_EMAILJS_USER_ID=your_emailjs_user_id

# ===========================================
# FEATURE FLAGS
# ===========================================

# Enable/Disable Features
REACT_APP_ENABLE_OCR=true
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_DARK_MODE=true

# ===========================================
# SECURITY CONFIGURATION
# ===========================================

# JWT Configuration
REACT_APP_JWT_EXPIRY=24h
REACT_APP_SESSION_TIMEOUT=30

# ===========================================
# ANALYTICS & MONITORING
# ===========================================

# Google Analytics (Optional)
REACT_APP_GA_TRACKING_ID=your_ga_tracking_id

# Sentry Error Tracking (Optional)
REACT_APP_SENTRY_DSN=your_sentry_dsn

# ===========================================
# BUILD CONFIGURATION
# ===========================================

# Build Settings
GENERATE_SOURCEMAP=false
ESLINT_NO_DEV_ERRORS=true
FAST_REFRESH=true

# ===========================================
# DEPLOYMENT SPECIFIC
# ===========================================

# Production URLs (Update for production)
REACT_APP_PRODUCTION_API_URL=https://your-production-api.com
REACT_APP_STAGING_API_URL=https://your-staging-api.com

# ===========================================
# DEVELOPMENT TOOLS
# ===========================================

# React DevTools
REACT_EDITOR=code

# Browser for development
BROWSER=chrome

# Development Port
PORT=3000

